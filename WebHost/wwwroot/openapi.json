{
  "openapi": "3.0.1",
  "info": {
    "title": "People API",
    "description": "Example",
    "version": "v1",
    "contact": {
      "name": "Jean",
      "email": "haha@hotmail.com",
      "url": "https://github.com"
    }
  },
  "servers": [
    {
      "url": "https://localhost"
    }
  ],
  "tags": [
    {
      "name": "People API",
      "description": "Demo"
    }
  ],
  "paths": {
    "/people/{id}": {
      "get": {
        "tags": [
          "People"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Unique identifier of the person",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "description": "A person object",
        "operationId": "GetPerson",
        "responses": {
          "200": {
            "description": "Person Object",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/EmployedPerson"
                    },
                    {
                      "$ref": "#/components/schemas/UnemployedPerson"
                    }
                  ],
                  "discriminator": {
                    "propertyName": "type",
                    "mapping": {
                      "Employed": "#/components/schemas/EmployedPerson",
                      "Unemployed": "#/components/schemas/UnemployedPerson"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Person not found."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmployedPerson": {
        "type": "object",
        "required": [
          "id",
          "firstName",
          "lastName",
          "type",
          "jobTitle"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier"
          },
          "firstName": {
            "type": "string",
            "description": "First Name"
          },
          "lastName": {
            "type": "string",
            "description": "Last Name"
          },
          "type": {
            "type": "string",
            "description": "Type of person",
            "enum": [
              "Employed"
            ]
          },
          "jobTitle": {
            "type": "string",
            "description": "Job title"
          }
        }
      },
      "UnemployedPerson": {
        "type": "object",
        "required": [
          "id",
          "firstName",
          "lastName",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier"
          },
          "firstName": {
            "type": "string",
            "description": "First Name"
          },
          "lastName": {
            "type": "string",
            "description": "Last Name"
          },
          "type": {
            "type": "string",
            "description": "Type of person",
            "enum": [
              "Unemployed"
            ]
          },
          "since": {
            "type": "string",
            "description": "Date since unemployed"
          }
        }
      }
    }
  }
}